{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // windows控制台下的运行，使用GBK编码(out文件夹下)
        {
            "name": "gdb Launch(extern-console)",
            "preLaunchTask": "gcc build (GBK out)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/${fileBasenameNoExtension}.exe",  // 这里是一个输出文件夹out，这个文件夹要手动创建
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/CCompiler/MinGW-w64-8.1.0/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // 内置控制台启动，使用UTF-8编码(out文件夹下)
        {
            "name": "gdb Launch(internal-console)",
            "preLaunchTask": "gcc build (UTF-8 out)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/${fileBasenameNoExtension}.exe",  // 这里是一个输出文件夹out，这个文件夹要手动创建
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/CCompiler/MinGW-w64-8.1.0/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}